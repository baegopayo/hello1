<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62.2dp"
        android:layout_gravity="center_vertical"
        android:background="#fbe45a"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="26.7dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_home_black_24dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:lineSpacingExtra="2sp"
            android:text="회원가입"
            android:textColor="#7c5d06"
            android:textSize="16sp" />


    </LinearLayout>


    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="17.1dp"
        android:layout_marginEnd="17.1dp"

        android:background="#fbe45a"
        android:text="회원가입 완료" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:layout_marginStart="12.6dp"
        android:inputType="none"
        android:lineSpacingExtra="1.3sp"
        android:textColor="#000000"
        android:textSize="11.7sp"
        tools:text="필수 입력 사항" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:layout_below="@id/editText2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nickname_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="104.1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7dp"
                android:lineSpacingExtra="1.3sp"
                android:text="닉네임"
                android:textColor="#000000"
                android:textSize="11.7sp" />

            <EditText
                android:id="@+id/input_nick"
                android:layout_width="169.5dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/nick_overlap_btn"
                android:layout_width="55.7dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.4dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/register_check" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="104.1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7dp"
                android:lineSpacingExtra="1.3sp"
                android:text="아이디"
                android:textColor="#000000"
                android:textSize="11.7sp" />

            <EditText
                android:id="@+id/input_id"
                android:layout_width="169.5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ems="10"
                android:hint="nalsaem"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/id_overlap_btn"
                android:layout_width="55.7dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.4dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/register_check" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pw1_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="104.1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7dp"
                android:lineSpacingExtra="1.3sp"
                android:text="비밀번호"
                android:textColor="#000000"
                android:textSize="11.7sp" />

            <EditText
                android:id="@+id/input_pw"
                android:layout_width="238.9dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/input_id"
                android:ems="10"
                android:hint="6~12자리 숫자 또는 문자"
                android:inputType="textPassword" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/pw2_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/textView5"
                android:layout_width="104.1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7dp"
                android:lineSpacingExtra="1.3sp"
                android:text="비밀번호 확인"
                android:textColor="#000000"
                android:textSize="11.7sp" />

            <EditText
                android:id="@+id/input_pw_check"
                android:layout_width="169.5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/input_pw"
                android:ems="10"
                android:hint="비밀번호 재입력"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/pw_overlap_btn"
                android:layout_width="55.7dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.4dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/register_check" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="104.1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7dp"
                android:lineSpacingExtra="1.3sp"
                android:text="이메일"
                android:textColor="#000000"
                android:textSize="11.7sp" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="169.5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/input_pw_check"
                android:ems="10"
                android:hint="이메일 입력"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/email_overlap_btn"
                android:layout_width="55.7dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.4dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/register_check" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12.6dp"
        android:layout_marginEnd="12.6dp"
        android:background="#d1d3d4"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp"
        app:srcCompat="@drawable/register_icon" />


</RelativeLayout>